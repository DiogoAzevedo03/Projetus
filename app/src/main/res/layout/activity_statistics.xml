<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estatísticas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121" />

    <!-- Botões de filtro -->
    <LinearLayout
        android:id="@+id/filter_buttons"
        android:layout_below="@id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_utilizador"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Utilizador"
            android:textAllCaps="false"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000" />

        <Button
            android:id="@+id/btn_projeto"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Projeto"
            android:textAllCaps="false"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000" />

        <Button
            android:id="@+id/btn_tarefa"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Tarefa"
            android:textAllCaps="false"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000" />
    </LinearLayout>

    <!-- Bloco de Estatísticas -->
    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_below="@id/filter_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_nome"
            android:text="João Silva"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tarefas"
            android:text="Tarefas Atribuídas: 0\nTarefas Concluídas: 0"
            android:textColor="#555555"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_taxa"
            android:text="Taxa Média de Conclusão: 0%"
            android:textColor="#555555"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_projetos"
            android:text="Projetos Concluídos: 0"
            android:textColor="#555555"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_exportar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Exportar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#2196F3" />
    </LinearLayout>

    <!-- Navegação inferior -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_user"
            android:contentDescription="Perfil"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:contentDescription="Configurações"
            android:scaleType="centerInside"
            android:padding="8dp" />
    </LinearLayout>

</RelativeLayout>
