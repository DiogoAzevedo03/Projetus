<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <!-- Conteúdo principal rolável -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Detalhes da Tarefa"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_entrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrega:"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxa de Conclusão:"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tempo Gasto"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Observações"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Foto (URL ou caminho)"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar alterações"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_concluir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar como concluída"
                android:layout_marginTop="12dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFF" />

        </LinearLayout>
    </ScrollView>

    <!-- Menu inferior fixo -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_user"
            android:contentDescription="Perfil"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:contentDescription="Configurações"
            android:scaleType="centerInside"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>
