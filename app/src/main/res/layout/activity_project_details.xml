<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Conteúdo principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalhes do Projeto"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#212121"
                android:layout_marginBottom="24dp" />

            <!-- Informações do projeto -->
            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Projeto:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição do Projeto:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Início:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_fim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fim:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!-- Gestor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestor:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_gestor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Colaboradores -->
            <TextView
                android:id="@+id/tv_colaboradores_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colaboradores:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_colaboradores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(a carregar...)"
                android:textColor="#666"
                android:background="#EEEEEE"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Progresso -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxa de Conclusão:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:progress="80"
                    android:max="100"
                    android:progressTint="#2196F3"
                    android:backgroundTint="#DDDDDD" />

                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:layout_marginStart="8dp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Tempo Gasto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempo Gasto:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="5h 30 min"
                android:padding="12dp"
                android:textColor="#000000"
                android:background="#EEEEEE"
                android:layout_marginBottom="24dp" />

            <!-- Botões -->
            <Button
                android:id="@+id/btn_associar_colaboradores"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Associar Colaboradores"
                android:backgroundTint="#1976D2"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_concluir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Marcar como concluído"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_apagar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Apagar Projeto"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Navegação inferior -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_user"
            android:contentDescription="Perfil"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:contentDescription="Definições"
            android:scaleType="centerInside"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>

